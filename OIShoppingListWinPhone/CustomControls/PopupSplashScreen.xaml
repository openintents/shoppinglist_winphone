<UserControl x:Class="OIShoppingListWinPhone.CustomLayout.PopupSplashScreen"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    FontFamily="{StaticResource PhoneFontFamilyNormal}"
    FontSize="{StaticResource PhoneFontSizeNormal}"
    Foreground="{StaticResource PhoneForegroundBrush}"
    d:DesignHeight="800" d:DesignWidth="480">
    
    <Grid x:Name="LayoutRoot"
          Background="Black"
          Width="480"
          Height="800">
        <Image Source="/Images/SplashScreen.png"/>        
		<ProgressBar Name="loadingProgress" Height="20" Width="450" Margin="10,0,10,105" VerticalAlignment="Bottom" d:LayoutOverrides="Height"/>
		<TextBlock Text="Loading..." Height="43" HorizontalAlignment="Center" Foreground="Black" FontSize="29.333" Margin="0,0,0,128" FontFamily="Segoe WP Light" VerticalAlignment="Bottom"/>
    </Grid>
</UserControl>
